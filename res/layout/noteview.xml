<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/noteview__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/noteview__image"
        android:maxLines="2"
        android:text="@string/empty"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noteview__description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignRight="@+id/noteview__title"
        android:layout_below="@id/noteview__title"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/noteview__image"
        android:maxLines="3"
        android:text="@string/empty" />

    <ImageView
        android:id="@+id/noteview__image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty"
        android:maxHeight="28dp"
        android:maxWidth="28dp"
        android:src="@drawable/important_img" />

</RelativeLayout>